---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link type="application/atom+xml" href="{{site.url}}feed.xml" rel="self"/>
    <updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
    <id>{{ site.baseurl }}/</id>
    <rights>{{ site.copyright }}</rights>
    <logo>{{ site.url }}assets/img/top/portrait.jpg</logo>
    {% for post in site.posts limit:20 %}
      {% unless post.draft %}
        <item>
          <title>{{ post.title | xml_escape }}</title>
          <description>{{ post.content | strip_html | xml_escape | truncatewords: 50 }}</description>
          <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
          <updated>{{ post.date | date_to_xmlschema }}</updated>
          <guid isPermaLink="true">{{ site.url }}{{ post.id }}</guid>
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
